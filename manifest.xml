<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
  xsi:type="TaskPaneApp">

  <!-- Basic Add-in Information -->
  <Id>11223344-5566-7788-99AA-BBCCDDEEFF00</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Company Name</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Paragraph Control" />
  <Description DefaultValue="Control and manage paragraphs in your document" />
  <IconUrl DefaultValue="https://your-website.com/assets/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://your-website.com/assets/icon-64.png" />
  <SupportUrl DefaultValue="https://your-website.com/support" />

  <!-- Domains that will be allowed when navigating. For example, if you use ShowTaskpane and then have an href link, navigation will only be allowed if the domain is in this list. -->
  <AppDomains>
    <AppDomain>https://byleonardlim.github.io/msword-exp/</AppDomain>
  </AppDomains>

  <!-- Specify which Office host applications can run the add-in -->
  <Hosts>
    <Host Name="Document" />
  </Hosts>

  <!-- Specify API requirements -->
  <Requirements>
    <Sets DefaultMinVersion="1.3">
      <Set Name="WordApi" MinVersion="1.3" />
    </Sets>
  </Requirements>

  <!-- Default settings for the add-in -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://byleonardlim.github.io/msword-exp/" />
  </DefaultSettings>

  <!-- Permissions needed by the add-in -->
  <Permissions>ReadWriteDocument</Permissions>

  <!-- Version overrides for Office 365 -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    
    <!-- Office hosts -->
    <Hosts>
      <Host xsi:type="Document">
        
        <!-- Form factors -->
        <DesktopFormFactor>
          
          <!-- Extends the Office ribbon with custom buttons -->
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            
            <!-- Use existing Office tab (Home tab in this example) -->
            <OfficeTab id="TabHome">
              
              <!-- Define custom group -->
              <Group id="ParagraphControl.Group">
                <Label resid="ParagraphControl.GroupLabel" />
                <Icon>
                  <bt:Image size="16" resid="ParagraphControl.Icon16" />
                  <bt:Image size="32" resid="ParagraphControl.Icon32" />
                  <bt:Image size="80" resid="ParagraphControl.Icon80" />
                </Icon>
                
                <!-- Define button for opening the task pane -->
                <Control xsi:type="Button" id="ParagraphControl.TaskpaneButton">
                  <Label resid="ParagraphControl.TaskpaneButtonLabel" />
                  <Supertip>
                    <Title resid="ParagraphControl.TaskpaneButtonTooltipTitle" />
                    <Description resid="ParagraphControl.TaskpaneButtonTooltipDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="ParagraphControl.Icon16" />
                    <bt:Image size="32" resid="ParagraphControl.Icon32" />
                    <bt:Image size="80" resid="ParagraphControl.Icon80" />
                  </Icon>
                  
                  <!-- Action when button is clicked: Show the task pane -->
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="ParagraphControl.TaskpaneUrl" />
                  </Action>
                </Control>
                
                <!-- Add additional commands as needed -->
                <Control xsi:type="Button" id="ParagraphControl.WrapButton">
                  <Label resid="ParagraphControl.WrapButtonLabel" />
                  <Supertip>
                    <Title resid="ParagraphControl.WrapButtonTooltipTitle" />
                    <Description resid="ParagraphControl.WrapButtonTooltipDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="ParagraphControl.WrapIcon16" />
                    <bt:Image size="32" resid="ParagraphControl.WrapIcon32" />
                    <bt:Image size="80" resid="ParagraphControl.WrapIcon80" />
                  </Icon>
                  
                  <!-- Execute function when button is clicked -->
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>wrapSelectedParagraph</FunctionName>
                  </Action>
                </Control>
                
              </Group>
            </OfficeTab>
          </ExtensionPoint>
          
          <!-- Function file integration for ExecuteFunction actions -->
          <FunctionFile resid="ParagraphControl.FunctionFile" />
        </DesktopFormFactor>
      </Host>
    </Hosts>
    
    <!-- Resources used by the add-in (strings, URLs, icons) -->
    <Resources>
      <bt:Images>
        <bt:Image id="ParagraphControl.Icon16" DefaultValue="https://byleonardlim.github.io/msword-exp/assets/icon-16.png" />
        <bt:Image id="ParagraphControl.Icon32" DefaultValue="https://byleonardlim.github.io/msword-exp/assets/icon-32.png" />
        <bt:Image id="ParagraphControl.Icon80" DefaultValue="https://byleonardlim.github.io/msword-exp/assets/icon-80.png" />
        <bt:Image id="ParagraphControl.WrapIcon16" DefaultValue="https://byleonardlim.github.io/msword-exp/assets/wrap-16.png" />
        <bt:Image id="ParagraphControl.WrapIcon32" DefaultValue="https://byleonardlim.github.io/msword-exp/assets/wrap-32.png" />
        <bt:Image id="ParagraphControl.WrapIcon80" DefaultValue="https://byleonardlim.github.io/msword-exp/assets/wrap-80.png" />
      </bt:Images>
      
      <bt:Urls>
        <bt:Url id="ParagraphControl.TaskpaneUrl" DefaultValue="https://byleonardlim.github.io/msword-exp/" />
        <bt:Url id="ParagraphControl.FunctionFile" DefaultValue="https://byleonardlim.github.io/msword-exp/" />
      </bt:Urls>
      
      <bt:ShortStrings>
        <bt:String id="ParagraphControl.GroupLabel" DefaultValue="Paragraph Control" />
        <bt:String id="ParagraphControl.TaskpaneButtonLabel" DefaultValue="Paragraph Tools" />
        <bt:String id="ParagraphControl.TaskpaneButtonTooltipTitle" DefaultValue="Paragraph Control Tools" />
        <bt:String id="ParagraphControl.WrapButtonLabel" DefaultValue="Wrap Paragraph" />
        <bt:String id="ParagraphControl.WrapButtonTooltipTitle" DefaultValue="Wrap in Content Control" />
      </bt:ShortStrings>
      
      <bt:LongStrings>
        <bt:String id="ParagraphControl.TaskpaneButtonTooltipDescription" DefaultValue="Open the Paragraph Control task pane to manage and control paragraphs in your document." />
        <bt:String id="ParagraphControl.WrapButtonTooltipDescription" DefaultValue="Wrap the selected paragraph in a content control for easy management." />
      </bt:LongStrings>
    </Resources>    
  </VersionOverrides>
</OfficeApp>